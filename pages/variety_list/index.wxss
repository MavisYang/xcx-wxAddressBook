/* pages/variety-book/index.wxss */
page {
  height: 100%;
}

.log-list {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #ddd;
  overflow-y: auto;
}

.top_view {
  width: 100%;
  height: 500rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 26rpx;
}

.scroll_view {
  height: calc(100% - 500rpx - 26rpx);
  white-space: nowrap;
  background: #fff;
}

.search_box {
  width: 100%;
}

.search_ipt {
  width: 610rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid;
  padding: 0 8rpx;
}

.hot_box_cat {
  display: flex;
  flex-wrap: wrap;
}

.hot_text {
  width: 157rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border: 1px solid #e5e5e5;
  border-radius: 8rpx;
  color: #282828;
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
}

.hot_text:nth-of-type(4n) {
  margin-right: 0;
}

.hot_text.active {
  border: 1px solid #57d2a9;
  color: #57d2a9;
}

/* scroll */

.scroll_view {
  padding-left: 20rpx;
  padding-right: 60rpx;
  box-sizing: border-box;
}

.title {
  /* height: 60rpx;
  line-height: 60rpx; */
  font-size: 12px;
  color: red;
  margin-top: 30rpx;
}


.list-group-item {
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #e5e5e5;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.list-shortcut {
  position: absolute;
  z-index: 30;
  right: 0;
  top: calc(500rpx + 26rpx);
  width: 60rpx;
  text-align: center;
}

.list-shortcut text {
  display: block;
  /* padding: 3px; */
  line-height: 1;
  color: #ddd;
  font-size: 12px;
}

.current {
  color: #ffcd32 !important;
}